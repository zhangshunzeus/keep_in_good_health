<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#22c39d"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myrecords_intent_loginname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@drawable/myrecords_return"
            android:src="@drawable/myrecords_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_records_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="#e5e5e5"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_myrecords_below"
            android:gravity="center"
            android:padding="5dp"
            android:checked="true"
            android:text="@string/my_records_all"
            android:textColor="@drawable/selector_text_style" />

        <RadioButton
            android:id="@+id/rb_paymoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_myrecords_below"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/my_records_pay_money"
            android:textColor="@drawable/selector_text_style" />

        <RadioButton
            android:id="@+id/rb_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_myrecords_below"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/my_records_send_shop"
            android:textColor="@drawable/selector_text_style" />

        <RadioButton
            android:id="@+id/rb_receive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            
            android:drawableBottom="@drawable/selector_myrecords_below"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/my_records_take_delivered"
            android:textColor="@drawable/selector_text_style" />

        <RadioButton
            android:id="@+id/rb_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/selector_myrecords_below"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/my_records_evaluates"
            android:textColor="@drawable/selector_text_style" />
    </RadioGroup>

    <fragment
        android:id="@+id/my_records_all"
        android:name="com.zhangwenbin.activity.MyRecordsFragmentAll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <fragment
        android:id="@+id/my_records_pay_money"
        android:name="com.zhangwenbin.activity.MyRecordsFragmentPayMoney"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <fragment
        android:id="@+id/my_records_send"
        android:name="com.zhangwenbin.activity.MyRecordsFragmentsend"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <fragment
        android:id="@+id/my_records_receive"
        android:name="com.zhangwenbin.activity.MyRecordsFragmentReceive"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <fragment
        android:id="@+id/my_records_comment"
        android:name="com.zhangwenbin.activity.MyRecordsFragmentComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />
    
     <RadioGroup
        android:id="@+id/my_records_return_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="1"
        android:background="#e5e5e5"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/myrecords_intent_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_homepage"
            android:gravity="center"
            android:text="@string/home_page_btn"
            android:textColor="@drawable/selector_text_style"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/myrecords_intent_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_classify"
            android:gravity="center"
            android:text="@string/classification_btn"
            android:textColor="@drawable/selector_text_style"
            android:textSize="12sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_my"
            android:gravity="center"
            android:text="@string/my_btn"
            android:textColor="@drawable/selector_text_style"
            android:textSize="12sp" />
    </RadioGroup> 
</LinearLayout>