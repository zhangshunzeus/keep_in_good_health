<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/sortfragment_line"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/sorttop_bg" >

        <ImageView
            android:id="@+id/sortfragment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:src="@drawable/meal_name_back" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/sort_auto_bg"
            android:drawableRight="@drawable/sort_auto_seek"
            android:paddingEnd="9dp"
            android:paddingLeft="4dp"
            android:textColor="@color/mealname_font_headline_color"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortfragment_line"
        android:orientation="horizontal" >


        <ScrollView
            android:id="@+id/sortfragment_left_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" >


            <RadioGroup
                android:id="@+id/sort_left_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sort_border_bg" >

                <RadioButton
                    android:id="@+id/sort_left_radio1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="养生动态"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="春季饮食"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="饮茶养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="中医养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio5"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="健康饮酒"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio6"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="佛家养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio7"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="道家养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio8"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="运动养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio9"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="节气养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio10"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="民间偏方"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio11"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="日常养生"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />

                <RadioButton
                    android:id="@+id/sort_left_radio12"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="夏季进补"
                    android:textColor="@drawable/left_text_seletor"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/public_line" />
            </RadioGroup>
        </ScrollView>

        <LinearLayout
            android:id="@+id/sortfragment_regit_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/sort_right_bg"
            android:orientation="vertical" />
    </LinearLayout>

</RelativeLayout>