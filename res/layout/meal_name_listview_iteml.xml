<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meal_name_show_image"
        android:layout_width="match_parent"
        android:layout_height="376px"
        android:scaleType="centerCrop"
        android:src="@drawable/meal_name_show_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#ff0000" />


    <TextView
        android:id="@+id/food_title_one"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginBottom="20px"
        android:layout_gravity="center"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="准备"
        android:textSize="30px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/food_iamge_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_title_one"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/food_iamge_one" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_text_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="38px"
                android:layout_weight="1"
                android:textColor="@color/mealname_font_headline_color"
                android:textSize="24px"
                android:text="草莓" />

            <TextView
                android:id="@+id/food_text_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20px"
                android:textSize="24px"
                android:textColor="@color/mealname_font_subtitle_color"
                android:layout_weight="1"
                android:text="草莓具有消耗的功效，草莓还可以巩固牙龈，润泽喉部。" />

        </LinearLayout>


        <ImageView
            android:id="@+id/food_line_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40px"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:src="@drawable/food_line_one" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/food_iamge_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_title_one"
            android:layout_gravity="center"
            android:src="@drawable/food_iamge_two" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_text_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="38px"
                android:layout_weight="1"
                android:textColor="@color/mealname_font_headline_color"
                android:textSize="24px"
                android:text="草莓" />

            <TextView
                android:id="@+id/food_text_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20px"
                android:textSize="24px"
                android:textColor="@color/mealname_font_subtitle_color"
                android:layout_weight="1"
                android:text="草莓具有消耗的功效，草莓还可以巩固牙龈，润泽喉部。" />

        </LinearLayout>




        <ImageView
            android:id="@+id/food_line_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40px"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:src="@drawable/food_line_one" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:text="主料"
            android:textColor="@color/mealname_font_headline_color"
            android:textSize="24px" />

        <TextView
            android:id="@+id/meal_name_Liao_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:layout_marginTop="20px"
            android:textSize="24px"
            android:textColor="@color/mealname_font_subtitle_color"
            android:text="如果你无法简洁的表达你的想法" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#ff0000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:text="配料"
            android:textColor="@color/mealname_font_headline_color"
            android:textSize="24px" />

        <TextView
            android:id="@+id/meal_name_dosing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:layout_marginTop="20px"
            android:textSize="24px"
            android:textColor="@color/mealname_font_subtitle_color"
            android:text="如果你无法简洁的表达你的想法" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#ff0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="做法"
            android:textColor="@color/mealname_font_headline_color"
            android:textSize="30px" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/meal_name_practice_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:textSize="24px"
                android:textColor="@color/mealname_font_subtitle_color"
                android:text="1.如果你无法简洁的表达你的想法" />

        </RelativeLayout>




    </LinearLayout>

</LinearLayout>