<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/friendtb">

        <ImageView
            android:id="@+id/recomend2_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:padding="15dp"
            android:text="今日推荐"
            android:textColor="@color/friendt"
            android:textSize="30sp"

            />
    </RelativeLayout>
<!--大图片-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recomend2_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/eatwhat" ></ImageView>
            <!--幸运水果-->
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="幸运水果"
                android:padding="15dp"
                android:textColor="@color/title"
                android:textSize="27sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/fruit" />

                <TextView
                    android:id="@+id/recomend_friut_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/title"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃吃好吃"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/right" />
            </LinearLayout>
            <!--营养早餐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld1_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="营养早餐"
                android:padding="15dp"
                android:textColor="@color/title"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/breakfirst" />

                <TextView
                    android:id="@+id/recomend_friut1_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="13dp"

                    android:text="柚子\n好吃好吃好吃好吃"

                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <!--丰盛午餐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld3_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="丰盛午餐"
                android:textColor="@color/title"
                android:textSize="27sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food3_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/lunch" />

                <TextView
                    android:id="@+id/recomend_friut3_tx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    />
                <!-- 丰盛午餐2
                     >-->

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food3_1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/bad" />

                <TextView
                    android:id="@+id/recomend_friut3_1_tx"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textColor="@color/title"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/right" />
            </LinearLayout>
            <!--可口晚餐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/dinner" />
            <TextView
                android:id="@+id/recomend_chirld4_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可口晚餐"
                android:textColor="@color/title"
                android:textSize="27sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food4_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/recomend_friut4_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="20sp"
                    android:textColor="@color/title"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/jiang_button" />
</LinearLayout>