<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/recomend2_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:text="今日推荐"

            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recomend2_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_launcher" />
            <!--幸运水果-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="幸运水果"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/recomend_friut_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!--营养早餐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld1_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="幸运水果"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/recomend_friut1_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!--丰盛午餐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/black1" />

            <TextView
                android:id="@+id/recomend_chirld3_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="丰盛午餐"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food3_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/recomend_friut3_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />
                <!-- 丰盛午餐2
                     >-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food3_1_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/recomend_friut3_1_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
            <!--可口晚餐-->
            <TextView
                android:id="@+id/recomend_chirld4_name_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="丰盛午餐"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recomend2_food4_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/recomend_friut4_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="13dp"
                    android:text="柚子\n好吃好吃好吃好吃"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/jiang_button"/>
</LinearLayout>