<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/content_title_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/reasons_for_the_formation_activity_content_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/content_content_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/food_name_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/content_title_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/reasons_for_the_formation_activity_content_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/content_content_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/food_name_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/content_title_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/reasons_for_the_formation_activity_content_title"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/content_content_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/food_name_text"
        android:textSize="12sp" />

</LinearLayout>