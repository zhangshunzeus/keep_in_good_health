<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/my_records_list_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:text="@string/my_records_list_name"/> 

        <TextView
            android:id="@+id/my_records_list_goodsstates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:textColor="#22c39d"
            android:text="@string/my_records_list_goods"/> 
            
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/intent_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="5dp">

        <ImageView
            android:id="@+id/my_records_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@drawable/myrecords_picture_one"
            android:src="@drawable/myrecords_picture_one"/> 

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_records_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_records_list_text"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/my_records_shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/my_records_list_thingsmoney"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/my_records_shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_records_list_shop_number" 
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/my_records_shop_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:text="@string/my_records_list_shop_money"/>
                    
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/my_records_change_receiving"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/no_check_change_receive"
            android:text="@string/my_records_change_receive"
            android:textSize="12sp" 
            android:gravity="center"
            android:textColor="#22c39d"/>
        
    </LinearLayout>

</LinearLayout>