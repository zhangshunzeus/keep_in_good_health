<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:background="@drawable/home_page_top_bg" >

                <AutoCompleteTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_page_auto_bg"
                    android:drawableRight="@drawable/search"
                    android:hint="@string/home_page_search"
                    android:padding="9dp"
                    android:textColor="#F1F1F1"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/soup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/soup" />

                <ImageView
                    android:id="@+id/snacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/snacks" />

                <ImageView
                    android:id="@+id/the_dessert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/the_dessert" />

                <ImageView
                    android:id="@+id/rice_porridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/rice_porridge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@android:color/white" >

                <TextView
                    android:id="@+id/soup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soup"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/snacks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="零嘴"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/the_dessert_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="甜点"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/rice_porridge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粥类"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:background="@android:color/white" >

                <ImageView
                    android:id="@+id/fruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/fruit" />

                <ImageView
                    android:id="@+id/meat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/meat" />

                <ImageView
                    android:id="@+id/a_vegetarian_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/a_vegetarian_diet" />

                <ImageView
                    android:id="@+id/drinking_tea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/drinking_tea" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginBottom="12dp" >

                <TextView
                    android:id="@+id/fruit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水果"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/meat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肉食"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/a_vegetarian_diet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="素食"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
                <TextView
                    android:id="@+id/drinking_tea_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饮茶"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp" />
                
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f1f1f1" />

            <TextView
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/home_page_carefully"
                android:textSize="15sp"
                android:textColor="#474747" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/what_to_eat_today_bg" />

            <TextView
                android:id="@+id/three_meals_a_day_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/three_meals_a_day_content"
                android:textSize="12sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="#f1f1f1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/meticulous_care_is_recommended"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableRow>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/elaborate_recommendations_one" >
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/elaborate_recommendations_two" >
                    </ImageView>
                </TableRow>

                <TableRow 
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/elaborate_recommendations_three" >
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/elaborate_recommendations_four" >
                    </ImageView>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/home_page_bottom_menu" />

</LinearLayout>