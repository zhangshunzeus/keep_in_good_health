<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="3dp" >

        <RadioButton
            android:id="@+id/home_page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_page"
            android:gravity="center_horizontal"
            android:text="@string/home_page_btn"
            android:textColor="#A89F9C"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/classification"
            android:gravity="center_horizontal"
            android:text="@string/classification_btn"
            android:textColor="#A89F9C"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/my"
            android:gravity="center_horizontal"
            android:text="@string/my_btn"
            android:textColor="#A89F9C"
            android:textSize="12sp" />

    </RadioGroup>

</LinearLayout>