<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meal_name_show_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/mealname_line"
        android:background="#ACACAC" />

    <TextView
        android:layout_marginTop="6dp"
        android:paddingLeft="5dp"
        android:id="@+id/food_title_one"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="需要食材"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/food_iamge_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:src="@drawable/foodmaterial" />

        <TextView
            android:id="@+id/food_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/food_iamge_one"
            android:layout_alignTop="@id/food_iamge_one"
            android:layout_toRightOf="@id/food_iamge_one"
            android:layout_weight="1"
            android:text="如果你无法简洁的表达你的想法，。" />

        <ImageView
            android:id="@+id/food_line_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:padding="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:src="@drawable/food_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/food_iamge_two"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:src="@drawable/foodmaterial" />

        <TextView
            android:id="@+id/food_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/food_iamge_one"
            android:layout_alignTop="@id/food_iamge_one"
            android:layout_toRightOf="@id/food_iamge_one"
            android:layout_weight="1"
            android:text="如果你无法简洁的表达你的想法，。" />

        <ImageView
            android:id="@+id/food_line_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:src="@drawable/food_icon" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/food_iamge_three"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:src="@drawable/foodmaterial" />

        <TextView
            android:id="@+id/food_text_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/food_iamge_one"
            android:layout_alignTop="@id/food_iamge_one"
            android:layout_toRightOf="@id/food_iamge_one"
            android:layout_weight="1"
            android:text="如果你无法简洁的表达你的想法，。" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:src="@drawable/food_icon" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="主料"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meal_name_Liao_text"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:text="如果你无法简洁的表达你的想法" />
    </LinearLayout>

    <LinearLayout
        android:background="#091CF3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="配料"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meal_name_dosing_text"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:text="如果你无法简洁的表达你的想法" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="做法"
            android:paddingLeft="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meal_name_practice_text"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1.如果你无法简洁的表达你的想法" />

    </LinearLayout>

</LinearLayout>