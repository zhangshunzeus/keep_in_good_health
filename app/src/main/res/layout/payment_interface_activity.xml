<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/payment_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/mealname_back_icon" />

        <TextView
            android:id="@+id/payment_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@color/mealnameWhite"
            android:gravity="center"
            android:text="支付界面"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/payment_pay_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:text="请选择支付方式"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_pay_image_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:layout_gravity="center"
            android:src="@drawable/foodmaterial" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_pay_name_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_weight="1"
                android:text="支付宝" />

            <TextView
                android:id="@+id/payment_pay_text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_pay_name_one"

                android:layout_weight="1"
                android:text="支持存储卡信用卡，无需开通网银" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/food_line_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:padding="30dp"
            android:src="@drawable/food_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_pay_image_two"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:layout_gravity="center"
            android:src="@drawable/foodmaterial" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_pay_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_weight="1"
                android:text="易支付" />

            <TextView
                android:id="@+id/payment_pay_text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_pay_name_two"

                android:layout_weight="1"
                android:text="使用农业银行的易支付进行付款" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/food_line_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:padding="30dp"
            android:src="@drawable/food_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="#fff000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/payment_pay_image_three"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/food_title_one"
            android:layout_gravity="center"
            android:src="@drawable/foodmaterial" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/payment_pay_name_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_weight="1"
                android:text="网银" />

            <TextView
                android:id="@+id/payment_pay_text_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_pay_name_three"

                android:layout_weight="1"
                android:text="使用网银进行付款" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/food_line_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/food_text_one"
            android:padding="30dp"
            android:src="@drawable/food_icon" />
    </LinearLayout>

</LinearLayout>
