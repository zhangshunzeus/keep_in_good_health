<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--   标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/produce_detail_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/produce_detail_title_tx"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="产品详情" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/produce_detail_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_stork"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/produce_detail_function_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感冒灵颗粒，用于感冒发烧咽喉肿痛" />

        <TextView
            android:id="@+id/produce_detail_discont_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/produce_detail_function_tx"
            android:text="15.5 限时特价" />

        <ImageView

            android:id="@+id/produce_detail_bycar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <TextView
        android:id="@+id/produce_detail_discont_2_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/black_stork"
        android:text="满48包邮" />

    <TextView
        android:id="@+id/produce_detail_promiss_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:padding="8dp"
        android:background="@drawable/black_stork"
        android:text="1-5天送达，正品保证" />
</LinearLayout>