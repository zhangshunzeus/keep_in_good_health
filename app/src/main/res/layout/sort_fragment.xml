<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sortfragment_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sortfragment_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/mealname_back_icon" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:iconifiedByDefault="true"
            android:imeOptions="actionSearch"

            ></SearchView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortfragment_line"
        android:background="#ff0000"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sortfragment_left_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#fff000"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/sortfragment_regit_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"
            android:orientation="vertical" />
    </LinearLayout>

</RelativeLayout>